

<div class="post">
	<h2 class="title"><%=h @article.title %></h2>
	<div class="entry">	
		<em> body: </em>			
		<p> <%=h @article.body %></p>
	</div>
</div>

<br />

<h2> Comments: </h2>
<% if !@article.comments.blank? %>
  <% for comment in @article.comments %>
    <b><%=h comment.name %></b>
	<p><%=h comment.body %></p> <br /> (<%=h comment.created_at.strftime("at %I:%M%p %m/%d/%Y")  %>)
  <% end %>
<% else %>
  
<% end %>

<%= form_for(@comment, :action =>resource(@article, :comments) ) do %>

<div class="post">
	<h2 class="title"><%= text_field :name %></h2>
	<div class="entry">	
		<em> body: </em>			
		<p> <%= text_area :body %></p>
	</div>
  <p>
    <%= submit "leave a message" %>
  </p>
</div>

<% end =%>

<%= link_to 'Back', resource(:articles) %>