

<div class="post">
	<h3 class="title"><%=h @article.title %></h3>
	<div class="entry">				
		<p><%=h @article.body %></p>
		<p>
		<% if login? %>
			<%= link_to 'Edit', resource(@article, :edit) %> | 
			<%= link_to 'Delete', resource(@article, :delete), :class => 'delete' %>
		<% end %>
		</p>		
	</div>		
</div>

<hr />

<h4> Comments: </h4>
<% unless @article.comments.blank? %>
  <%= partial :comment, :with => @article.comments %> 
<% end %>

<hr />

<%= form_for(@comment, :action =>resource(@article, :comments) ) do %>

<div class="post">
	<h4 class="title">name: <%= text_field :name %></h4>
	<div class="entry">	
		<b> body: </b>			
		<p> <%= text_area :body, :cols => 60, :rows => 20 %></p>
	</div>
  <p>
    <%= submit "leave a message" %>
  </p>
</div>

<% end =%>

<div align="center">
<%= link_to 'Back', resource(:articles) %>
</div>